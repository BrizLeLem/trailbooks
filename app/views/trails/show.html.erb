<%= render "shared/navbar" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 col-xl-3" id="reservations-col">
      <!-- TABS -->
      <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
          <a class="nav-item nav-link active" id="nav-itinerary-tab" data-toggle="tab" href="#nav-itinerary" role="tab" aria-controls="nav-itinerary" aria-selected="true">My Itinerary</a>
          <a class="nav-item nav-link" id="nav-trailstages-tab" data-toggle="tab" href="#nav-trailstages" role="tab" aria-controls="nav-trailstages" aria-selected="false">Trail Stages</a>

        </div>
      </nav>
      <div class="tab-content" id="nav-tabContent">
              <!-- itinerary tab content -->
        <div class="tab-pane fade show active" id="nav-itinerary" role="tabpanel" aria-labelledby="nav-itinerary-tab">
          <div class="start-date">
            <div class="container">
              <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
                WHEN WILL YOU START YOUR HIKE?

                <%= simple_form_for :search, method: "get" do |f| %>
                  <%= f.input :checkin_date, as: :string, remote: true,  required: true, input_html: {class: "datepicker"} %>
                  <%= f.button :submit, "Let's go!", class: "btn btn-primary" %>
                <% end %>
              </div>
            </div>
          </div>
          <div id="itinerary">

          </div>
        </div>
        <!-- trailstages tab content -->
        <div class="tab-pane fade" id="nav-trailstages" role="tabpanel" aria-labelledby="nav-trailstages-tab">
          <% @trail.trail_stages.each do |ts| %>
            <div class="ts-<%=ts.stage_number%>">
              <p><%= ts.stage_number %>. <%= ts.name %></p>
              <p>...
              <p>
            </div>
          <% end %>
        </div>

      </div>
      <!-- end of TABS -->
    </div>
    <!-- MAP -->
    <div class="col-md-9" id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>"></div>
    <!-- accomodation overlay -->
    <div class="accomodation-container"></div>
  </div>
</div>
